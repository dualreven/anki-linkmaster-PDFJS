# 强制使用 pnpm 作为包管理器
# 禁止使用 npm 和 yarn
package-manager-strict=true
engine-strict=true

# 如果尝试使用 npm，会显示错误信息
# 这个配置会让 npm 命令失败
save-exact=true
fund=false
audit=false

# PNPM 特定配置
prefer-workspace-packages=true
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=@babel/*

# 防止意外的全局安装
save=false