{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AI-DOCS-SCHEMA-HEAD",
    "type": "object",
    "properties": {
        "meta": {
            "type": "object",
            "properties": {
                "id": { "type": "string" },
                "type": { "type": "string" },
                "name": { "type": "string" },
                "version": { "type": "string" },
                "desc": { "type": "string" }
            },
            "required": ["id", "type", "name", "version", "desc"]
        },
        "ref": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "module_path": { "type": "string" },
                    "specs": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": { "type": "string" },
                                "desc": { "type": "string" }
                            },
                            "required": ["id", "desc"]
                        }
                    }
                },
                "required": ["module_path", "specs"]
            }
        },
        "private": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "string" },
                    "desc": { "type": "string" }
                },
                "required": ["id", "desc"]
            }
        }
    },
    "required": ["meta", "ref", "private"]
}
